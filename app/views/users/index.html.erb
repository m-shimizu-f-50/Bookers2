<div class="container">
	<div class="row">
		<div class= "col-xs-3">
			<h2>User info</h2>
				<%= attachment_image_tag @user ,:profile_image,:fill,100,100, fallback: "no_image.jpg" %>

				<table class="table">
					<tbody>
					 	<tr></tr>
						<th>name</th><td><%=@user.name %></td>
						</tr>
						<tr>
						<th>introduction</th><td><%= @user.introduction %></td>
						</tr>
						<tr>

				  </tbody>
				</table>


					<%= link_to edit_user_path(@user),class: "btn btn-default" do%>
						<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
					<% end %>

				<h2>New book</h2>
				<%= form_for(@book) do |f| %>
					<% if @book.errors.any? %>
						<div class="alert alert-warning">
							<h2><%= @book.errors.count %>error</h2>
							<ul>
								<% @book.errors.full_messages.each do |message| %>
								<li><%= message %></li>
								<% end %>
							</ul>
						</div>
					<% end %>


					<%= form_for(@book) do  |f| %>
						    <h4>Title</h4>
						    	<%= f.text_field :title %>

						    <h4>Opinion</h4>
								<%= f.text_area :body %><br>

								<%= f.submit 'Create Book' %>
                    <% end %>
                <% end %>

		</div>

		<div class ="col-xs-9">
			<h2>Users</h2>
			<table class="table table-striped">
				<thead>
				    <tr>
				      	<th>image</th>
				      	<th>name</th>
				      	<th></th>
				    </tr>
				</thead>
				<tbody>
				    <% @users.each do |user| %>
				      	<tr>
					        <td>
					        	<%=link_to user_path(@user) do %>

					        	<%= attachment_image_tag user ,:profile_image,:fill,100,100, fallback: "no_image.jpg" %></td>
					        	<% end %>
					        <td><%= user.name %></td>
					        <td><%= link_to "Show",user_path(user)%></td>
				        </tr>
				    <% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>





